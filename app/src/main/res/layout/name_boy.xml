<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/name_boy"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Justin Banks"
        android:id="@+id/textView14"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:layout_width="329dp"
        android:layout_height="363dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ashNext"
        android:layout_alignEnd="@+id/ashNext"
        android:layout_alignLeft="@+id/ashBack"
        android:layout_alignStart="@+id/ashBack"
        android:layout_weight="0.81"
        android:backgroundTintMode="screen"
        android:background="@drawable/justinresized">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="297dp"
        android:layout_height="61dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/ashBack"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="back"
            android:clickable="true"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/ashNext"
            android:layout_alignParentBottom="true"
            android:onClick="next"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp" />

    </RelativeLayout>

</LinearLayout>